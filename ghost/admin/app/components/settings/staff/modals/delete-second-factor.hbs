<div class="modal-content" data-test-modal="delete-factor">
    <header class="modal-header">
        <h1>Are you sure you want to delete this second factor?</h1>
    </header>
    <button type="button" class="close" title="Close" {{on "click" this.close}}>{{svg-jar "close"}}<span
            class="hidden">Close</span></button>

    <div class="modal-body">
        <p>
            <strong>{{@data.factor.name}}</strong> will be permanently deleted.
        </p>
    </div>

    <div class="modal-footer">
        <button class="gh-btn" data-test-button="cancel-delete-factor" type="button" {{on "click" this.close}}>
            <span>Cancel</span>
        </button>
        <GhTaskButton @buttonText="Delete Second Factor" @successText="Deleted" @task={{this.deleteFactorTask}}
            @class="gh-btn gh-btn-red gh-btn-icon" data-test-button="confirm-delete-factor" />
    </div>
</div>